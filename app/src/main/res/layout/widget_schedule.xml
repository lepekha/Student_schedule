<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/primary"
            android:id="@+id/linearLayout8">

            <TextView
                        android:id="@+id/txtWeekName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:text="Понедельник"
                    android:typeface="normal"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                </TextView>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRight"
                android:src="@drawable/ic_chevron_right_white_24px"
                android:background="#00000000"
                android:layout_marginRight="11dp"
                android:layout_marginEnd="11dp"
                android:layout_alignTop="@+id/btnLeft"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLeft"
                android:src="@drawable/ic_chevron_left_white_24px"
                android:background="#00000000"
                android:layout_marginRight="13dp"
                android:layout_marginEnd="13dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btnRight"
                android:layout_toStartOf="@+id/btnRight" />

        </RelativeLayout>

    <ListView
            android:id="@+id/lvList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none"
        android:paddingBottom="2dp"
        android:layout_below="@+id/linearLayout8">
    </ListView>

</RelativeLayout>