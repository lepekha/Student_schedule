<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main_content"
    android:background="@color/background_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgContactsName"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp"
                    android:layout_marginRight="7dp"/>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_open_in_new_black_24px"
                    android:id="@+id/imageButton"
                    android:tint="@color/accent"
                    android:background="#00000000"
                    android:layout_marginRight="11dp"
                    android:layout_marginEnd="11dp"
                    android:elevation="0dp"
                    android:cropToPadding="false"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Прикладная математика"
                    android:id="@+id/txtContactName"
                    android:paddingLeft="7dp"
                    android:textColor="@color/primary_text"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_width="280dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgContactsName"
                    android:layout_toEndOf="@+id/imgContactsName" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view"
            android:layout_alignBottom="@+id/imgContactsName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
</LinearLayout>
