<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/men"
        android:background="#FFFFFF"
        android:layout_marginTop="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:id="@+id/text3"
            android:layout_gravity="left|center_vertical"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:textStyle="bold" android:layout_marginLeft="4dp"
            android:layout_above="@+id/textView"
            android:textColor="@color/dgts__text_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="542"
            android:id="@+id/txtRoom"
            android:layout_gravity="right|center_vertical"
            android:textSize="15dp"
            android:textIsSelectable="false"
            android:layout_toRightOf="@+id/textView" android:layout_below="@+id/txtNazvanie" android:layout_marginLeft="3dp"
            android:textColor="@color/dgts__text_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="Математика"
            android:id="@+id/txtNazvanie"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text3"
            android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:textColor="@color/dgts__text_dark"
            android:textStyle="normal|bold" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="@string/widget_item_room" android:id="@+id/textView"
                  android:layout_gravity="right|center_vertical"  android:textSize="15dp"
                  android:textIsSelectable="false"
            android:layout_alignLeft="@+id/text3" android:layout_below="@+id/txtNazvanie"
                  android:layout_marginLeft="2dp" android:layout_marginBottom="2dp"
            android:textColor="@color/dgts__text_dark" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="@string/widget_item_time"
                  android:id="@+id/textView1" android:layout_gravity="right|center_vertical"
                  android:textSize="15dp" android:textIsSelectable="false"
            android:layout_toLeftOf="@+id/txtTime" android:layout_alignTop="@+id/txtRoom"
                  android:layout_marginRight="3dp"
            android:textColor="@color/dgts__text_dark" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="542" android:id="@+id/txtTime"
                  android:layout_gravity="right|center_vertical"  android:textSize="15dp"
                  android:textIsSelectable="false"
                  android:layout_alignParentRight="true" android:layout_alignTop="@+id/txtRoom"
                  android:layout_marginRight="2dp"
            android:textColor="@color/dgts__text_dark" />

    </RelativeLayout>

</RelativeLayout>