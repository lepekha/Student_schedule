<?xml version="1.0" encoding="UTF-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:minWidth="310dp">

        <ScrollView
            android:layout_width="310dp"
            android:layout_height="500dp"
            android:id="@+id/scrollView"
            android:paddingTop="24dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="№ заняття"
                        android:id="@+id/txtSubjectNumber" />

                    <EditText
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edSubjectNumber"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Назва предмету:"
                        android:id="@+id/txtSubjectName" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edSubjectName" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/ibtnSubjectName"
                            android:src="@android:drawable/ic_menu_help"
                            style="@style/Widget.AppCompat.Button"
                            android:tag="1"
                            android:tint="@color/accent" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Тип заняття:"
                        android:id="@+id/txtTypeSubject" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edTypeSubject" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/ibtnTypeSubject"
                            android:tag="2"
                            android:src="@android:drawable/ic_menu_help"
                            style="@style/Widget.AppCompat.Button"
                            android:tint="@color/accent" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Імя вчителя:"
                        android:id="@+id/txtSubjectTeacher" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edSubjectTeacher" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/ibtnSubjectTeacher"
                            android:tag="3"
                            android:src="@android:drawable/ic_menu_help"
                            style="@style/Widget.AppCompat.Button"
                            android:tint="@color/accent" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Аудиторія:"
                        android:id="@+id/txtSubjectRoom" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/edSubjectRoom" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/ibtnSubjectRoom"
                            android:tag="4"
                            android:src="@android:drawable/ic_menu_help"
                            style="@style/Widget.AppCompat.Button"
                            android:tint="@color/accent" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="270dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Час:"
                        android:id="@+id/txtTime" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Початок"
                            android:id="@+id/btnTimeStart"
                            style="@style/Widget.AppCompat.Button" />

                        <Button
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Кінець"
                            android:id="@+id/btnTimeEnd" />

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/ibtnTime"
                            android:tag="5"
                            android:src="@android:drawable/ic_menu_help"
                            style="@style/Widget.AppCompat.Button"
                            android:tint="@color/accent" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="270dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Тип неділі:"
                        android:id="@+id/txtTypeOfWeek" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/typeOfWeek"
                            android:id="@+id/spTypeOfWeek"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_alignRight="@+id/scrollView"
            android:layout_alignEnd="@+id/scrollView">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ВІДМІНА"
                android:id="@+id/btnCancel"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ДОДАТИ"
                android:id="@+id/btnAdd"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="24dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="8dp" />
        </LinearLayout>

    </RelativeLayout>
